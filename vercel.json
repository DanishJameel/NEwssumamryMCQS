{
  "version": 2,
  "builds": [
    {
      "src": "api/handler.ts",
      "use": "@vercel/node"
    },
    {
      "src": "dist/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/handler.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/handler.ts": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "VERCEL_BUILD_CACHE": "false"
    }
  }
} 